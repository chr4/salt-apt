# vim: ft=yaml

apt:
  unattended-upgrades:
    # Disable unattended-upgrades
    disable: true

    # Blacklist packages to prevent automatic upgrades
    blacklist: [keepalived, vim]

    # Enable automatic upgrade for packages from all origins (not only security)
    all-origins: all

  kernel:
    # linux-image meta package to install
    linux-image-meta-package: linux-image-generic
